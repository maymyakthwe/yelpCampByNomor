<%layout('layouts/boilerplate.ejs')%>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=foundcamp._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <label for="title" class="form-label">Title:</label><br>
                <input type="text" id="title" name="campground[title]" value="<%=foundcamp.title%>" class="form-control"
                    required><br>

                <label for="location" class="form-label">Location:</label><br>
                <input type="text" id="location" name="campground[location]" value="<%=foundcamp.location%>"
                    class="form-control" required><br>

                <label for="price" class="form-label">Price:</label><br>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="number" id="price" name="campground[price]" class="form-control" placeholder="0.00"
                        aria-label="Username" aria-describedby="basic-addon1" value="<%=foundcamp.price%>" required>
                </div>

                


                <!-- <label for="image" class="form-label">Image:</label><br>
            <input type="text" id="image" name="campground[image]" value="<%=foundcamp.image%>" class="form-control" required><br>
     -->
                <label for="description" class="form-label">Description</label><br>
                <textarea name="campground[description]" id="description" cols="30" rows="5" class="form-control"
                    required><%=foundcamp.description%></textarea><br>


                <div class="mb-3">
                    <label for="image" class="form-label">Upload Images</label>
                    <input name="image" class="form-control" type="file" id="image" multiple>
                </div>

                <div class="m-3">
                    <% foundcamp.images.forEach((img,i)=>{ %> 
                       
                        
                        <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
                        
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }) %> 
                </div>

                <button class="btn btn-success">Submit</button>
            </form>
            <a class="btn btn-outline-secondary mt-3" href="/campgrounds/<%=foundcamp._id%>">Cancel</a>
        </div>
    </div>